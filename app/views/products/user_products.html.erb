<div class="container">

  <br>
  <% if user_signed_in? %> 
    <h5> Hello <%= current_user.username %>, </h5> 
    <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete} %> | <%= link_to "All products", products_path %> | <%= link_to "Add new product", new_product_path %>
    <hr>

    <div class="text-center">

      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td><%= product.product_name %></td>
              <td><%= product.price %></td>
              <td><%= product.description %></td>
              <td>
                <%= link_to "View", product_path(product), class:"btn btn-sm btn-success" %>
                <%= link_to "Edit", edit_product_path(product), class:"btn btn-sm btn-dark" %>
                <%= link_to "Delete", product_path(product), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <h5> Hello There, </h5>
    <%= link_to "Sign in", new_user_session_path %>
  <% end %>  

</div>
