<div class="container">
  <br>
  <% if user_signed_in? %> 
    <h5> Hello <%= current_user.username %>, </h5> 
    <%= link_to "Sign out", destroy_user_session_path, data: {turbo_method: :delete} %> | <%= link_to "My products", user_products_path %> | <%= link_to "Add new product", new_product_path %>
  <% else %>
    <h5> Hello There, </h5>
    <%= link_to "Sign in", new_user_session_path %> | <%= link_to "Sign up", new_user_registration_path %>
  <% end %>
  <hr>

  <div class="text-center">

    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Product Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>User</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.product_name %></td>
            <td><%= product.price %></td>
            <td><%= product.description %></td>
            <td><%= product.user.username %></td>
            <td>
              <%= link_to "View", product_path(product), class:"btn btn-sm btn-secondary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  

</div>
